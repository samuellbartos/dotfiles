[user]
    name = h8_s
    email = h8_s@usa.com
[core]
    editor = nvim
    excludesfile = ~/.gitignore
[push]
    default = current
[pull]
    ff = only
[merge]
    conflictstyle = diff3
[includeIf "gitdir:~/work/open-bean/"]
    path = ~/work/open-bean/.gitconfig
[log]
    graphColors = white
[color "decorate"]
    HEAD = bold brightyellow
    branch = bold brightmagenta
    remoteBranch = brightmagenta
    tag = brightmagenta
[diff "color"]
    commit = brightwhite
    meta = bold brightwhite
    frag = bold brightwhite
    old = brightyellow
    new = brightmagenta
[color "branch"]
    current = bold brightmagenta
    local = bold brightmagenta
    upstream = brightmagenta

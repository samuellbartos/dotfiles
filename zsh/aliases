# MISC

alias l='ls -lahFGT'
alias tz='for i in $(seq 1 5); do time zsh -i -c exit; done'

# GIT

alias g='git'

# git autocompletion setup
compdef g='git'

# git add
alias ga='git add'
alias gap='git add --patch'
alias gau='git add --update'
alias gapu='git add --patch --update'

# git branch
alias gb='git branch'
alias gbf='git branch --force'
alias gbm='git branch --move'
alias gbd='git branch --delete'
alias gbD='git branch --delete --force'

# git commit
alias gm='TZ=UTC git commit'
alias gmf='TZ=UTC git commit --fixup'
alias gma='TZ=UTC git commit --amend'
alias gmm='TZ=UTC git commit --message'

# git checkout
alias gc='git checkout'
alias gcb='git checkout -b'
alias gcB='git checkout -B'

# git cherry-pick
alias gcp='git cherry-pick'
alias gcpc='git cherry-pick --continue'
alias gcpa='git cherry-pick --abort'

# git diff
alias gd='git diff'
alias gds='git diff --staged'

# git fetch
alias gf='git fetch'
alias gfm='(git fetch origin master:master || git fetch && git pull --ff-only) 2> /dev/null'

# git log
alias gl='git log --all --oneline --graph --pretty="%C(auto)%h -%d %s %C(blue)(%ci) <%an>%Creset"'

# git pull
alias gpl='git pull'

# git push
alias gp='git push'
alias gpf='git push --force-with-lease'

# git rebase
alias gri='git rebase --committer-date-is-author-date --interactive'
alias gria='git rebase --committer-date-is-author-date --interactive --autosquash'
alias grc='git rebase --continue'
alias gra='git rebase --abort'
alias grix='git rebase --committer-date-is-author-date --interactive --exec'
alias grx='git rebase --committer-date-is-author-date --exec'

# git restore
alias gr='git restore'
alias grs='git restore --staged'
alias grsw='git restore --staged --worktree'

# git reset
alias grh='git reset --hard'
alias grm='git reset --mixed'

# git stash
alias gsh='git stash'
alias gshk='git stash --keep-index'
alias gshs='git stash push --staged'
alias gshp='git stash pop'
alias gshd='git stash drop'
alias gshswp='git stash show --pretty'

# git status
alias gs='git status'
alias gss='git status --short'

# git show
alias gsw='git show'
alias gswp='git show --pretty="" --name-status'

# git switch
alias gw='git switch'
alias gwc='git switch -c'
alias gwC='git switch -C'

# git tag
alias gt='git tag'

# remove tracking branches deleted on remote
alias gx="git fetch && git remote show origin | sed -n '/HEAD branch/s/.*: //p' | xargs git checkout && git pull && git branch -vv | awk '/: gone]/{print \$1}' | xargs git branch -D"

# K8S
alias k='kubectl'

# kubectl apply
alias ka='kubectl apply -f'

# kubectl get
alias kg='kubectl get'
alias kgcm='kubectl get configmaps'
alias kgev='kubectl get events'
alias kgno='kubectl get nodes'
alias kgns='kubectl get namespaces'
alias kgpv='kubectl get persistentvolume'
alias kgpvc='kubectl get persistentvolumeclaims'
alias kgpo='kubectl get pods'
alias kgsc='kubectl get storageclasses'

# kubectl delete
alias krm='kubectl delete'
alias krmcm='kubectl delete configmaps'
alias krmno='kubectl delete nodes'
alias krmns='kubectl delete namespaces'
alias krmpv='kubectl delete persistentvolume'
alias krmpvc='kubectl delete persistentvolumeclaims'
alias krmpo='kubectl delete pods'
alias krmsc='kubectl delete storageclasses'

# kubectl describe
alias kd='kubectl describe'
alias kdcm='kubectl describe configmaps'
alias kdno='kubectl describe nodes'
alias kdns='kubectl describe namespaces'
alias kdpv='kubectl describe persistentvolume'
alias kdpvc='kubectl describe persistentvolumeclaims'
alias kdpo='kubectl describe pods'
alias kdsc='kubectl describe storageclasses'

# kubectl edit
alias ke='kubectl edit'
alias kepo='kubectl edit pods'

# kubectl exec
alias kex='kubectl exec'
alias kexit='kubectl exec --stdin --tty'

# kubectl logs
alias kl='kubectl logs'

# kubectl port-forward
alias kpf='kubectl port-forward'

# kubectl config
alias kc='kubectl config'
alias kcv='kubectl config view --minify'
alias kcns='kubectl config set-context --current --namespace'

# git
alias g='git'

# git autocompletion setup
compdef g='git'

# git add
alias ga='git add'
alias gap='git add --patch'
alias gau='git add --update'
alias gapu='git add --patch --update'

# git branch
alias gb='git branch'
alias gbf='git branch --force'
alias gbm='git branch --move'

# git commit
alias gm='git commit'
alias gmf='git commit --fixup'
alias gma='git commit --amend'
alias gmm='git commit --message'

# git checkout
alias gc='git checkout'
alias gcb='git checkout -b'
alias gcB='git checkout -B'

# git cherry-pick
alias gcp='git cherry-pick'
alias gcpc='git cherry-pick --continue'
alias gcpa='git cherry-pick --abort'

# git diff
alias gd='git diff'
alias gdc='git diff --cached'

# git fetch
alias gf='git fetch'
alias gfm='(git fetch origin master:master || git fetch && git pull --ff-only) 2> /dev/null'

# git log
alias gl='git log --all --oneline --graph --pretty="%C(auto)%h -%d %s %C(cyan)(%cr) <%an>%Creset"'

# git pull
alias gpl='git pull'

# git push
alias gp='git push'
alias gpsu='git push --set-upstream'
alias gpf='git push --force-with-lease'

# git rebase
alias gri='git rebase --interactive'
alias gria='git rebase --interactive --autosquash'
alias grc='git rebase --continue'
alias gra='git rebase --abort'

# git restore
alias gr='git restore'
alias grs='git restore --staged'

# git reset
alias grh='git reset --hard'
alias grm='git reset --mixed'

# git stash
alias gsh='git stash'
alias gshk='git stash --keep-index'
alias gshp='git stash pop'
alias gshd='git stash drop'
alias gshswp='git stash show --pretty'

# git status
alias gs='git status'

# git show
alias gsw='git show'
alias gswp='git show --pretty="" --name-status'

# git tag
alias gt='git tag'

# remove tracking branches deleted on remote
alias gx="git fetch --prune && git checkout master && git pull && git branch -vv | awk '/: gone]/{print \$1}' | xargs git branch -D"

# git
alias g='git'

# git autocompletion setup
compdef g='git'

# git add
alias ga='git add'
alias gap='git add -p'
alias gau='git add -u'

# git branch
alias gb='git branch'
alias gbf='git branch -f'
alias gbm='git branch -m'

# git commit
alias gm='git commit'
alias gmf='git commit --fixup'
alias gma='git commit --amend'
alias gmm='git commit -m'

# git checkout
alias gc='git checkout'
alias gcb='git checkout -b'

# git cherry-pick
alias gcp='git cherry-pick'
alias gcpc='git cherry-pick --continue'
alias gcpa='git cherry-pick --abort'

# git diff
alias gd='git diff'
alias gdc='git diff --cached'

# git fetch
alias gf='git fetch'
alias gfm='(git fetch origin master:master || git fetch && git pull --ff-only) 2> /dev/null'

# git log
alias gl='git log --all --oneline --graph --pretty="%C(auto)%h -%d %s %C(cyan)(%cr) %C(blue)<%an>%Creset"'

# git pull
alias gpl='git pull'

# git push
alias gp='git push'
alias gpu='git push -u'
alias gpf='git push --force-with-lease'

# git rebase
alias gri='git rebase -i'
alias gria='git rebase -i --autosquash'
alias grc='git rebase --continue'
alias gra='git rebase --abort'

# git restore
alias gr='git restore'
alias grs='git restore --staged'

# git reset
alias grh='git reset --hard'
alias grm='git reset --mixed'

# git stash
alias gsh='git stash'
alias gshk='git stash -k'
alias gshp='git stash pop'
alias gshd='git stash drop'
alias gshswp='git stash show -p'

# git status
alias gs='git status'

# git show
alias gsw='git show'
alias gswp='git show --pretty="" --name-status'

# git tag
alias gt='git tag'

# remove tracking branches deleted on remote
alias gx="git fetch -p && git checkout master && git pull && git branch -vv | awk '/: gone]/{print \$1}' | xargs git branch -D"
